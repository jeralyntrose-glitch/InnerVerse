{
  "openapi": "3.1.0",
  "info": {
    "title": "AXIS MIND Knowledge Base",
    "version": "2.0.0",
    "description": "Search across all uploaded MBTI/Jungian typology documents from C.S. Joseph's framework. Returns answers with source attribution."
  },
  "servers": [
    {
      "url": "https://axis-of-mind.replit.app"
    }
  ],
  "paths": {
    "/query": {
      "post": {
        "summary": "Search the MBTI knowledge base",
        "description": "Search across all uploaded documents for answers about MBTI, Jungian typology, cognitive functions, and personality types using C.S. Joseph's framework.",
        "operationId": "searchKnowledgeBase",
        "x-openai-isConsequential": false,
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "question": {
                    "type": "string",
                    "description": "The question about MBTI, cognitive functions, or personality types"
                  },
                  "document_id": {
                    "type": "string",
                    "description": "Leave empty to search all documents",
                    "default": ""
                  }
                },
                "required": ["question"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Answer with sources from the knowledge base",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "answer": {
                      "type": "string",
                      "description": "Answer from C.S. Joseph's MBTI framework with source attribution"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "API Key"
      }
    }
  }
}
