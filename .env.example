# InnerVerse Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=InnerVerse
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=5000

# =============================================================================
# SECURITY
# =============================================================================
CSRF_SECRET_KEY=your-secret-key-here
COOKIE_SECURE=false
COOKIE_SAMESITE=lax
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5000"]

# =============================================================================
# API KEYS (REQUIRED)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=gcp-starter
PINECONE_INDEX=mbti-knowledge-v2
BRAVE_API_KEY=your-brave-api-key-here

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/innerverse
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# PROXY SETTINGS (Optional)
# =============================================================================
DECODO_PROXY_HOST=
DECODO_PROXY_PORT=
DECODO_PROXY_USER=
DECODO_PROXY_PASS=

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_HOUR=100

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================
CLAUDE_MODEL=claude-sonnet-4-20250514
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# FILE PATHS
# =============================================================================
TEMPLATE_DIR=templates
DATA_DIR=data
KNOWLEDGE_GRAPH_PATH=data/knowledge-graph.json
YOUTUBE_COOKIES_PATH=youtube_cookies.txt

# =============================================================================
# CACHING
# =============================================================================
USAGE_LOG_SIZE=1000

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=text
LOG_FILE=
